<body>
  <div class="container">
    <h1 class="text-center">Todo App!</h1>
  
    <button class="btn btn-default btn-lg newTodo">New Todo</button>
    
    <table class="table">
      <thead>
        <tr>
          <th class='col-xs-2'>Created At</th>
          <th class='col-xs-2'>Due Date</th>
          <th class='col-xs-6'>Description</th>
          <th class='col-xs-1'>Done?</th>
          <th class='col-xs-1'>Delete</th>
        </tr>
      </thead>
      <tbody class='todoList'>

        <tr class='template'>
          <td class='createdAt'>x</td>
          <td class='dueDate'>x</td>
          <td class='desc'>x</td>
          <td>
            <input class='isComplete' type="checkbox">
          </td>
          <td>
            <button type="button" class="btn btn-default btn-sm delete">
              <span class="glyphicon glyphicon-remove"></span>
            </button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

